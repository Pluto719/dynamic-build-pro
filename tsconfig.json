{
  "compilerOptions": {
    "target": "es5",       
    "module": "esnext",                            
    "forceConsistentCasingInFileNames": true,     /*确保导入中的大小写正确*/
    "allowSyntheticDefaultImports":true,  //允许从没有默认导出的文件引用文件   
    "strict": true,                                      
    "skipLibCheck": false,//跳过所有声明文件的类型检查
    "jsx": "react-jsx",      
    "declaration": true,  
    "allowJs": true,    
    "checkJs": true,    
    "removeComments": true,   // 删除编译后的所有的注释
    "moduleResolution": "node", 
    "baseUrl": "./", 
    "paths": {
      "@/":["src/*"]
    },                   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
